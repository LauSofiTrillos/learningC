//to use isdigit(), checks whether a character is a
//numeric character (0-9), or not.
#include <ctype.h>
//to use printf()
#include <stdio.h>

   int main(){
      char c1 = 'g';
//if the argument passed to isdigit() is a numeric character, 
//it returns 1, if not it returns 0. 
      if(isdigit(c1)){
        printf("%c is a numeric character", c1);
      }
      else {
        printf("%c is a non-numeric character", c1);
      }
   return 0;
   }
