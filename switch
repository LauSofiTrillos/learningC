#include <stdio.h>
int main(){
    char operator;
    int n1 = 4, n2 = 8, result;
    
    printf("Operator(+, -, *, /): ");
    scanf("%c", &operator);
    
    switch(operator){
    case '+':
         printf("suma = %d", n1 + n2);
         break;
    case '-':
         printf("resta = %d", n1 - n2);
         break;
    case '*':
         printf("producto = %d", n1 * n2);
         break;
    case '/':
         printf("cociente = %d", n1 / n2);
         break;
    default:
         printf("Error! no valido")
    }
    
    return 0;
    
 }
