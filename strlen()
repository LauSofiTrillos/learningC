// strlen() toma un string como argumento y retorna su cantidda de caracteres 
#include <stdio.h>
#include <string.h>
int main(){

  char str1[20] = "Program";
  char str2[20] = {'P','r','o','g','r','a','m','\0'};
  // se utiliza el especificador de formato %zu para imprimir la medida del String
  printf("Length of str1 = %zu\n", strlen(str1)); // 7
  printf("Length of str2 = %zu\n", strlen(str2)); // 7
  
  return 0;
}
